<?xml version='1.0' encoding='utf-8'?>
<widget id="co.gov.gestiondelriesgo.yoreporto" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:rim="http://www.blackberry.com/ns/widgets">
    <feature name="Camera" value="Camera" />
    <rim:permissions>
        <rim:permit>access_shared</rim:permit>
        <rim:permit>read_geolocation</rim:permit>
    </rim:permissions>
    <feature name="Accelerometer" value="Accelerometer" />
    <feature name="Notification" value="Notification" />
    <feature name="File" value="File" />
    <feature name="FileTransfer" value="FileTransfer" />
    <feature name="Geolocation" value="Geolocation" />
    <feature name="NetworkStatus" value="NetworkStatus" />
    <feature name="SplashScreen" value="SplashScreen" />
    <name>Yo Reporto</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference gap:platform="blackberry10" name="websecurity" value="disable" />
    <preference name="webviewbounce" value="true" />
    <preference name="DisallowOverscroll" value="true" />
</widget>
